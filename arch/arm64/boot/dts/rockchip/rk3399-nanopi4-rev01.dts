#define USE_KERNEL_EEPROM_DRIVER

/dts-v1/;
#include "rk3399-nanopi4-common.dtsi"

/ {
	model = "FriendlyElec NanoPi M4";
	compatible = "friendlyelec,nanopi-m4", "rockchip,rk3399";

	platdrvsample:platdrvsample {
		status = "okay";
		compatible = "sample-test,platform-driver";
		test-val = <12>;
	};

	led-sample {
		#address-cells = <1>;
		#size-cells = <1>;
		status = "okay";
		compatible = "sample,led-sample-dts";
		reg = <0x0 0xff320000 0x0 0x1000>, <0x0 0xff730000 0x0 0x1000>;
	};

	led-ioctl {
		status = "okay";
		compatible = "gpio,led-sample";
		pinctrl-names = "default";
		pinctrl-0 = <&led_0 &led_1 &led_2 &led_3>;
		led0-gpios = <&gpio1 RK_PA0 GPIO_ACTIVE_LOW>;
		led1-gpios = <&gpio1 RK_PA1 GPIO_ACTIVE_LOW>;
		led2-gpios = <&gpio1 RK_PA3 GPIO_ACTIVE_LOW>;
		led3-gpios = <&gpio1 RK_PA4 GPIO_ACTIVE_LOW>;
	};

	gpio-mouse {
		status = "okay";
		compatible = "gpio,mouse";
		pinctrl-names = "default";
		pinctrl-0 = <&btn_up &btn_down &btn_left &btn_right &btn_btnleft>;

		btn-up = <145>;
		btn-down = <144>;
		btn-left = <50>;
		btn-right = <54>;
		btn-btnleft = <55>;

		scan_ms = <10>;
	};

};


&pinctrl {
	led {
		led_0: led_0 {
			rockchip,pins = <1 RK_PA0 RK_FUNC_GPIO &pcfg_pull_none>;
		};
		led_1: led_1 {
			rockchip,pins = <1 RK_PA1 RK_FUNC_GPIO &pcfg_pull_none>;
		};
		led_2: led_2 {
			rockchip,pins = <1 RK_PA3 RK_FUNC_GPIO &pcfg_pull_none>;
		};
		led_3: led_3 {
			rockchip,pins = <1 RK_PA4 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	gpio_mouse {
		btn_up: btn_up {
			rockchip,pins = <4 RK_PC1 RK_FUNC_GPIO &pcfg_pull_none>;
		};
		btn_down: btn_down {
			rockchip,pins = <4 RK_PC0 RK_FUNC_GPIO &pcfg_pull_none>;
		};
		btn_left: btn_left {
			rockchip,pins = <1 RK_PC2 RK_FUNC_GPIO &pcfg_pull_none>;
		};
		btn_right: btn_right {
			rockchip,pins = <1 RK_PC6 RK_FUNC_GPIO &pcfg_pull_none>;
		};
		btn_btnleft: btn_btnleft {
			rockchip,pins = <1 RK_PC7 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};
};

&mach {
	hwrev = <1>;
	model = "NanoPi M4";
};

&sdhci {
	mmc-hs200-1_8v;
	/delete-property/ mmc-hs400-1_8v;
	/delete-property/ mmc-hs400-enhanced-strobe;
};

&i2s1 {
	status = "okay";
	rockchip,i2s-broken-burst-len;
	rockchip,playback-channels = <2>;
	rockchip,capture-channels = <2>;
	#sound-dai-cells = <0>;
};

&rt5651_card {
	/delete-property/ pinctrl-0;
	/delete-property/ simple-audio-card,hp-det-gpio;

	simple-audio-card,cpu {
		sound-dai = <&i2s1>;
	};
};

&hdmi_hdcp2 {
    status = "okay";
};

&i2c2 {
	status = "disabled";
#ifdef ENABLE_EEPROM
#ifdef USE_KERNEL_EEPROM_DRIVER
	at24@50 {
		compatible = "at24,24c08";
		reg = <0x50>;
	};
#else
	at24cxx@50 {
		status = "okay";
		compatible = "at24cxx";
		reg = <0x50>;
	};
#endif
#endif

	ads1115: ads1115@48 {
		compatible = "ti,ads1115";
		reg = <0x48>;
		interrupt-parent = <&gpio1>;
		interrupts = <0 IRQ_TYPE_LEVEL_HIGH>;
		pinctrl-names = "default";
		pinctrl-0 = <&ads1115_int>;
		#io-channel-cells = <1>;
		io-channel-ranges;

		#address-cells = <1>;
		#size-cells = <0>;

		channel@0 {
			reg = <0>;
			ti,gain = <1>;
			ti,datarate = <4>;
		};

		channel@1 {
			reg = <1>;
			ti,gain = <1>;
			ti,datarate = <4>;
		};

		channel@2 {
			reg = <2>;
			ti,gain = <1>;
			ti,datarate = <4>;
		};

		channel@3 {
			reg = <2>;
			ti,gain = <1>;
			ti,datarate = <4>;
		};
	};
};

&pinctrl {
	ads_1115 {
		ads1115_int: ads1115_int {
			rockchip,pins = <1 0 RK_FUNC_GPIO &pcfg_pull_up>;
		};
	};
};
